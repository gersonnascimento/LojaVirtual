<div class="container">
<div class="row">
  <div class="col-sm-6"><img src="images/imgfront.jpg" class="img-rounded img-responsive" /></div>
  <div class="col-sm-6"><h1 class="display-1" style="color: #000080; margin-top: 20%; margin-left: 30%">GD EXPRESS</h1></div>
</div>
</div>
<table class="table table-bordered" style="margin-top: 20px">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Pre√ßo</th>
            <th>Quantidade</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        <% todos = Produto.all %>
        <% todos.each do |produto| %>
            <tr>
              
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><img src="images/produto<%=produto.id%>.jpg" class="img-rounded img-responsive" style="margin-left: 17%"><h2 style="margin-left: 20%"><%= produto.nome %><h2></td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><h2 style="margin-top: 40%; margin-left: 30%; color: LimeGreen">R$ <%= format("%.2f", produto.valor) %></h2></td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><h3 style="margin-top: 45%; margin-left: 45%"><%= produto.quantidade %></h3></td>
                <td class="col-xs-1 col-sm-1 col-md-1 col-lg-1"><a href="/produtos/<%= produto.id %>/buy" style="margin-top: 40%;" class="btn btn-primary btn-lg btn-block">Comprar</a></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "Criar novo produto", produtos_new_path %>
