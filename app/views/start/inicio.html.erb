<div class="container">
<div class="row">
  <div class="col-sm-6"><img src="images/imgfront.jpg" class="img-rounded img-responsive" /></div>
  <div class="col-sm-6"><h1 class="display-1" style="color: #000080; margin-top: 20%; margin-left: 30%">DG EXPRESS</h1></div>
</div>
</div>
<table class="table table-bordered" style="margin-top: 20px">
    <thead>
        <tr>
            <th>Imagem</th>
            <th>Nome</th>
            <th>Pre√ßo</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        <% todos = Produto.all %>
        <% todos.each do |produto| %>
            <tr>
                <td><img src="images/produto<%=produto.id%>.jpg" class="img-rounded img-responsive" /></td>
                <td><%= produto.nome %></td>
                <td><%= produto.valor %></td>
                <td><%= produto.quantidade %></td>
                <td><a href="/produtos/<%= produto.id %>/buy" class="btn btn-success">Comprar</a></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "Criar novo produto", produtos_new_path %>
</body>
</html>